<%- include("partials/header")%>
<body style="background-image: linear-gradient(brown,black);">
    <h1 style="text-align: center;color: white;">edit student information</h1>
    <div class="ui main text container segment" style="background-color: black;width: 400px;">
  <form class="ui black form" action="/student/<%=student.id%>" method="POST">
    <div class="field">
      <label style="color: white;">Full name <span style="color:red">*</span></label>
      <input type="text" name="name" value="<%=student.name%>" required>
    </div>
    <div class="field">
      <label style="color: white;">E-mail <span style="color:red">*</span></label>
      <input type="email" name="email" value="<%=student.email%>" required>
    </div>
    <div class="field">
      <label style="color: white;">Phone <span style="color:red">*</span></label>
      <input type="number" name="phone" value="<%=student.phone%>" required>
    </div>
    <div class="field">
      <label style="color: white;">Photo-url <span style="color:red">*</span></label>
      <input type="text" name="photo" value="<%=student.photo%>" required>
    </div>
    <div class="field">
      <label style="color: white;">Degree <span style="color:red">*</span></label>
      <input type="text" name="degree" value="<%=student.degree%>" required>
    </div>
    <button class="ui primary button" type="submit">Submit</button>
  </form>
  </div>
  </body>







<%- include("partials/footer") %>